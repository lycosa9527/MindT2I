# ============================================================================
# MindT2I Configuration (FastAPI Version)
# ============================================================================
#
# Copy this file to .env and configure your settings
# The application will load these variables automatically
#

# ============================================================================
# DASHSCOPE API CONFIGURATION
# ============================================================================

# DashScope API Key (Required)
# Get your API key from: https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# DashScope Base URL
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# Image Generation Model (ImageSynthesis API)
# Default: wan2.5-t2i-preview (recommended - latest with best quality)
# Alternative: wan2.2-t2i-flash (faster but lower quality)
IMAGE_MODEL=wan2.5-t2i-preview

# Video Generation Model (VideoSynthesis API)
# Default: wan2.5-t2v-preview (supports 10s videos and audio)
# Alternative: wan2.2-t2v-plus (5s videos only)
VIDEO_MODEL=wan2.5-t2v-preview

# Text Model for prompt enhancement and ReAct agent
# Default: qwen-turbo (fast and cost-effective)
QWEN_TEXT_MODEL=qwen-turbo

# Legacy: Qwen MultiModal image model (deprecated, use IMAGE_MODEL instead)
# QWEN_IMAGE_MODEL=qwen-image-plus

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server host (0.0.0.0 allows external access)
HOST=0.0.0.0

# Server port
PORT=9528

# Server host for image URLs (used for external access)
# Set this to your public IP or domain name
SERVER_HOST=localhost

# Debug mode (true/false)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# IMAGE GENERATION DEFAULTS
# ============================================================================
# Note: Debug page uses these settings from .env (no UI controls)

# Default image size
# Options: 1664*928 (16:9), 1472*1140 (4:3), 1328*1328 (1:1), 1140*1472 (3:4), 928*1664 (9:16)
DEFAULT_IMAGE_SIZE=1328*1328

# Default watermark setting (true/false)
DEFAULT_WATERMARK=false

# Default prompt extend setting (true/false)
DEFAULT_PROMPT_EXTEND=true

# Enable prompt enhancement with LLM (true/false)
# When true: User prompt → Qwen Turbo (K12 enhancement) → wan2.5 API
# When false: User prompt → wan2.5 API directly
ENABLE_PROMPT_ENHANCEMENT=true

# ============================================================================
# IMAGE GENERATION CONFIGURATION
# ============================================================================

# Default image resolution (format: width*height)
# wan2.5-t2i-preview options (recommended):
#   1:1: 1280*1280
#   3:2: 1200*800, 2:3: 800*1200
#   4:3: 1280*960 (default - good for most content)
#   3:4: 960*1280
#   16:9: 1280*720, 9:16: 720*1280
#   21:9: 1344*576
# wan2.2-t2i-flash: 1024*1024, 1280*720, etc.
# Default: 1280*960 (4:3 aspect ratio)
IMAGE_DEFAULT_SIZE=1280*960

# Enable prompt enhancement for images (true/false)
# Recommended: true for better quality results
# Uses AI to intelligently rewrite and improve prompts
# Default: true
IMAGE_PROMPT_EXTEND=false

# Add watermark to images (true/false)
# Default: false
IMAGE_WATERMARK=false

# ============================================================================
# VIDEO GENERATION CONFIGURATION
# ============================================================================

# Default video resolution (format: width*height)
# Options for wan2.5-t2v-preview:
#   480P: 832*480 (16:9), 480*832 (9:16), 624*624 (1:1)
#   720P: 1280*720 (16:9), 720*1280 (9:16), 960*960 (1:1), 1088*832 (4:3), 832*1088 (3:4)
#   1080P: 1920*1080 (16:9), 1080*1920 (9:16), 1440*1440 (1:1), 1632*1248 (4:3), 1248*1632 (3:4)
# Default: 1920*1080 (1080P, 16:9 landscape)
VIDEO_DEFAULT_SIZE=1920*1080

# Default video duration in seconds
# Options: 5 or 10 (only wan2.5-t2v-preview supports 10 seconds)
# Cost increases with duration: 费用 = 单价（分辨率）× 时长（秒）
# Default: 10
VIDEO_DEFAULT_DURATION=10

# Enable prompt enhancement for videos (true/false)
# Uses AI to intelligently rewrite and improve prompts
# Default: true
VIDEO_PROMPT_EXTEND=false

# Add watermark to videos (true/false)
# Watermark text: "AI生成" (bottom-right corner)
# Default: false
VIDEO_WATERMARK=false

# Enable audio for videos (true/false)
# Auto-generates audio matching video content (wan2.5-t2v-preview only)
# Default: true
VIDEO_AUDIO=true

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================

# Temporary folder for generated images
TEMP_FOLDER=temp_images

# ============================================================================
# API TIMEOUT SETTINGS
# ============================================================================

# API request timeout in seconds (for image generation)
API_TIMEOUT=60

# Image download timeout in seconds
IMAGE_DOWNLOAD_TIMEOUT=30

# ============================================================================
# PROMPT VALIDATION
# ============================================================================

# Minimum prompt length
MIN_PROMPT_LENGTH=3

# Maximum prompt length
MAX_PROMPT_LENGTH=1000
