# MindT2I Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# Made by MindSpring Team | Author: lycosa9527

# DashScope API Configuration (Platform for Qwen Models)
# Get your API key from: https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# Qwen Image Generation Parameters via DashScope
# Available image sizes and aspect ratios:
# 1664*928: 16:9 (landscape)
# 1472*1140: 4:3 (landscape)
# 1328*1328: 1:1 (square) - DEFAULT
# 1140*1472: 3:4 (portrait)
# 928*1664: 9:16 (portrait)

# Default image generation settings
DEFAULT_IMAGE_SIZE=1664*928
# Set to false for clean educational materials without watermarks
DEFAULT_WATERMARK=false
# Set to false since we're using Qwen Turbo for prompt enhancement
DEFAULT_PROMPT_EXTEND=false

# AI-Powered Educational Prompt Enhancement for K12 Classroom Use
# Uses Qwen Turbo via DashScope to transform simple prompts into detailed, educationally-focused descriptions
# Includes subject-specific learning elements, age-appropriate content, and classroom environment context
ENABLE_PROMPT_ENHANCEMENT=true

# Flask Server Configuration
FLASK_HOST=0.0.0.0    # IP address to bind Flask server to (default: 0.0.0.0 for all interfaces)
FLASK_PORT=9528       # Port for Flask server to bind to (default: 9528)
FLASK_DEBUG=false     # Enable debug mode (default: false for production)

# Server Configuration for Image URLs
SERVER_HOST=localhost  # Your server IP or hostname for generated image URLs
SERVER_PORT=9528       # Your server port for generated image URLs

# Timeout and Performance Settings
API_TIMEOUT=60        # Timeout for DashScope API calls in seconds (default: 60)
IMAGE_DOWNLOAD_TIMEOUT=30  # Timeout for image download in seconds (default: 30)

# Prompt Validation Settings
MAX_PROMPT_LENGTH=1000  # Maximum prompt length in characters (default: 1000)
MIN_PROMPT_LENGTH=3     # Minimum prompt length in characters (default: 3)

# Optional: Logging Configuration
# LOG_LEVEL=INFO

# Optional: File Storage Configuration
# TEMP_FOLDER=temp_images
# MAX_FILE_SIZE=16777216  # 16MB in bytes
